{
  "name": "email-scrapper",
  "version": "1.0.0",
  "eslintConfig": {
    "extends": [
      "airbnb/base",
      "prettier",
      "plugin:node/recommended",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "no-plusplus": "off",
      "no-await-in-loop": "off",
      "no-shadow": "off",
      "no-restricted-syntax": "off",
      "node/no-unpublished-require": [
        "error",
        {
          "allowModules": [
            "chrome-aws-lambda"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "description": "Job email scrapper for Torre.co",
  "main": "src/index.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --coverage",
    "lint": "eslint --ext .js ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.8",
    "puppeteer": "^3.1.0",
    "sequelize": "^5.21.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix",
      "pre-push": "npm run test && npm audit"
    }
  }
}
